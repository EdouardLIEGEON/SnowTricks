{% extends 'base.html.twig' %}

{% block title %}S'enregistrer | {% endblock %}

{% block body %}
<section id="register">
{% for message in app.flashes('error') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
                <h1>S'enregistrer</h1>
    <div class="container" >
        <div class="row">
            <div class="col form">
                    {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.name) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.photo) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                        <button type="submit" class="btn btn-lg btn-primary my-3">M'inscrire</button>
                    {{ form_end(registrationForm) }}
                    <p class="form-text">Un mail sera envoyé sur l'adresse utilisée pour vous permettre de confirmer la création du compte</p>
            </div>
        </div>
    </div>
</section>
    
{% endblock %}
