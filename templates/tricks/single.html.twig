{% extends 'base.html.twig' %}

{% block title %}{{ tricks.name }} | {% endblock %}

{% block body %}
    <div class="row" style="background:transparent;">
        <div class="col-10">
        </div>
        <div class="col-2"><a href="/tricks/update" class="links_tricks"><img src="/img/update.png"></a>
            <a class="button links_tricks" href="#popup1"><img src="/img/delete.png"></a>
        </div>
    </div>    
    <header id='tricks'>
        <h1>{{ tricks.name }}</h1>
    </header>
    <section class="container-fluid single-trick">
        <div class="row single">
            <div class="col-2">
            </div>
            <div class="col-4">
                <h2>Photo</h2>
                <img src="/img/{{tricks.photo}}">
            </div>
            <div class="col-4">
                <h2>Vidéo</h2>
                <iframe width="600" height="400" src="{{tricks.video}}" 
                title="YouTube video player" frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen></iframe>
            </div> 
            <div class="col-2">
            </div>
        </div>
        <div class="row single blue">
            <div class="col-12 description">
                <p>{{tricks.description}}<p>
            </div>
            <div class="col-2">
                <div class="bottom">
                    <h3>Type de trick</h3>
                    <p>{{tricks.type}}</p>
                </div>
            </div>
            <div class="col-2">
                <div class="bottom">
                    <h3>Créé le</h3>
                    <p>{{tricks.created_at|date("d/m/Y")}}</p>
                </div>
            </div>
            <div class="col-2">
                <div class="bottom">
                    <h3>Modifié le</h3>
                        <p>{{tricks.created_at|date("d/m/Y")}}</p>
                    <p></p>
                </div>
            </div>
        </div>

        <div class="row single ">
            <h2>Discussions sur "{{tricks.name}}"</h2>
            <div class="col-3">
            </div>
            <div class="col-6 comments">
                {% for comment in comments %}
                    <img src=''>
                    <h3>Jean-Louis : </h3>
                    <p class="comment">{{comment.content}}</p>
                {% endfor %} 
            </div>
            <div class="col-3">
            </div>
        </div>

    </section>
    <div id="popup1" class="overlay">
        <div class="popup container-fluid">
            <h2>On supprime vraiment ce trick ?</h2>
                <div class="row">
                    <div class="col-2 offset-4">
                        <button class="btn btn-primary"><a class="close" href="/tricks/delete">Oui</a></button>
                    </div>
                    <div class="col-2">
                        <button class="btn btn-primary"><a class="close" href="/tricks/{{tricks.name}}">Non</a></button>
                    </div>
                    <div class="col-4">
                    </div>
                </div>
        </div>
    </div>
{% endblock %}